{{tool-bar
  isEditing=isEditing
  onEdit=(action "toggleIsEditing")
}}

{{#ember-dragula
  classNames="l-scoreboard-container"
	config=dragulaConfig

  as |drake|
}}

  {{#sw-dragula-container
    id="js-scoreboard-main-area"
    drake=drake
  }}

    {{#each goals as |item|}}
      {{goal-block
        goal=item
        classNames="in-edit js-list-item"
        isEditing=isEditing
        onDeleteGoal=(action "deleteGoal")
        onSwipeGoalOpen=(action "swipeGoalOpen")
        onSwipeGoalClose=(action "swipeGoalClose")}}
    {{/each}}

  {{/sw-dragula-container}}

{{/ember-dragula}}