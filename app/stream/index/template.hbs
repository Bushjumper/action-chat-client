<header class="pink || l-app-header">
  <div class="c-header">
    <section class="c-header_first-section" {{action (action 'gotoStreams')}}>
      {{inline-svg "images/icons/icon-back" class="c-icon--back"}}
    </section>

    <section class="c-header_second-section">
      <h1 class="c-header_title">
        {{stream.title}}
      </h1>

      {{#liquid-spacer
        growDuration=250
        growWidth=false
        class="c-header_spacer"}}
        <div id="header-content-destination" class="c-header_subtitle">
          <p class="a-fade-in o-stream-members-list">{{headerContent}}</p>
        </div>
      {{/liquid-spacer}}
    </section>


    <section class="c-header_last-section" {{action (action 'logout' target=session)}}>
      <p class="c-header_user-name">{{session.person.name}}</p>
      {{inline-svg "images/icons/icon-logout" class="c-icon--logout"}}
    </section>
  </div>
</header>

<nav class="c-tabs">
  {{#link-to 'stream.index.chat' classNames="c-tabs_item chat"}}
  	{{inline-svg 'images/icons/icon-stream' class="c-tabs_icon"}}
  {{/link-to}}

  {{#link-to 'stream.index.scoreboard' classNames="c-tabs_item scoreboard"}}
	  {{inline-svg 'images/icons/icon-scoreboard' class="c-tabs_icon"}}
  {{/link-to}}

	<div class="c-tabs_line"></div>
</nav>

{{liquid-outlet class="l-app-body--stream js-stream-body"}}

