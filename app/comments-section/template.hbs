<button {{action (action loadEarlier)}} class="c-load-earlier">
	{{#if isLoadingEarlier}}
		{{inline-svg "images/icons/icon-loading" class="c-load-earlier_icon a-fade-in"}}
	{{else}}
		<p class="a-fade-in">Load earlier</p>
	{{/if}}
</button>

{{!-- {{sessionMember.lastReadAt}} --}}

<div {{action (action 'doTap')}}>
  {{#each sortedComments as |comment|}}
    {{stream-comment
      comment=comment
      updateComment=(action updateComment comment)
      deleteComment=(action deleteComment comment)
      classNames="chip || message"
    }}
  {{/each}}
</div>

